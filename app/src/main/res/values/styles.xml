<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="editTextStyle">@style/editText</item>
        <item name="android:textViewStyle">@style/textView</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>


    <style name="AppTheme.HomePage" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="editTextStyle">@style/editText</item>
        <item name="android:textViewStyle">@style/textView</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.LoginScreen" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/login_hint</item>
    </style>

    <style name="AppTheme.Settings" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="displayOptions">showHome|showTitle|homeAsUp</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.Preference">
        <item name="android:layout" tools:ignore="PrivateResource">@layout/preference_material
        </item>
    </style>

    <style name="AppTheme.Preference.DialogPreference">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="AppTheme.Lobby" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/lobbyColorPrimary</item>
        <item name="colorPrimaryDark">@color/lobbyColorPrimaryDark</item>
        <item name="colorAccent">@color/lobbyColorAccent</item>

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorHint">@color/lobbyHint</item>
    </style>

    <style name="AppTheme.Lobby.ClearableEditText" parent="Widget.AppCompat.EditText">
        <item name="textColor">@android:color/white</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>

    <style name="AppTheme.Lobby.BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@drawable/join_button</item>
    </style>

    <style name="AppTheme.Lobby.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Lobby.Drawer" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Stats.TextTitle" parent="AppTheme.Lobby.Drawer">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Stats.TextValue" parent="Stats.TextTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Stats.TextTrack" parent="AppTheme.Lobby.Drawer">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Authenticating" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="button">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/_150sdp</item>
        <item name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:maxHeight">@dimen/_45sdp</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:fontFamily">@font/muli_regular</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--<item name="boxStrokeColor">#fff</item>-->
        <!--<item name="boxStrokeWidth">2dp</item>-->

        <!--<item name="android:textColorHint">@color/blueColor</item>-->
        <item name="textColor">@color/blackColor</item>
        <item name="errorEnabled">true</item>
    </style>


    <style name="TextInputLayoutStyleUser" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--<item name="boxStrokeColor">#fff</item>-->
        <!--<item name="boxStrokeWidth">2dp</item>-->
        <item name="android:textColorHint">@color/gray</item>
        <item name="textColor">@color/blackColor</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textColor">@color/blueColor</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/hintText</item>
        <item name="android:minHeight">@dimen/_50sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>


    <style name="progressBarAppColor" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/blueColor</item>
    </style>


    <style name="textView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/blackLight</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="DatePickerDialogThemes" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/blackColor</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/blackColor</item>
        <!-- Used for the background -->
        <item name="android:background">@color/whiteColor</item>
    </style>


    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>


    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_oval_bg_dialog</item>
    </style>

    <style name="transParentBgAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


</resources>
