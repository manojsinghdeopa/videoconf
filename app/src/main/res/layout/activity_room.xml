<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/roomView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/room_fragment_header" />


    <include layout="@layout/room_viewpager_layout" />


    <include layout="@layout/room_fragment_bottom" />


    <include layout="@layout/video_preview_bottom" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSwitchCamera"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_100sdp"
        android:alpha=".8"
        android:background="@drawable/border_oval"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/switch_camera"
        android:visibility="gone"
        app:tint="@color/blueColor" />

    <RelativeLayout
        android:id="@+id/disconnectAudioBubbleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_70sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:background="@drawable/floating_speech_bubble"
        android:padding="@dimen/_5sdp"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBubbleCross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_cancel"
            app:tint="@color/iconColor" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAudioDisconnect"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/disconnect_audio_text"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>


</RelativeLayout>